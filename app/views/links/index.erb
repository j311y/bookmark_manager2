<h1> Links </h1>

<% if current_user %>
Welcome <%= current_user.email %>
<% end %>

<ul id='links'>
  <% @link.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL: <%= link.url %>
      Tags:
      <% link.tags.each do |tag| %>
      <%= tag.name %>
      <% end %>
    </li>

  <% end %>
</ul>
